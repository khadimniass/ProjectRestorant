{% extends 'layouts/base.html.twig' %}

{% block title 'Register' %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="mt-3 center text-muted text-center">INSCRIVEZ-VOUS</h1>
            {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col-md-6">
            {{ form_row(registrationForm.firstName,{'attr':{'placeholder':'KHADIM'}}) }}
            </div>
            <div class="col-md-6">
            {{ form_row(registrationForm.lastName,{'attr':{'placeholder':'NIASS'}}) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
              {{ form_row(registrationForm.telephone,{'attr':{'placeholder':'77 195 87 13'}}) }}
            </div>

            <div class="col-md-6">
             {{ form_row(registrationForm.adress,{'attr':{'placeholder':'FANN RESIDANCE'}})}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(registrationForm.email,
                    {'attr':{'placeholder':"niassssn@gmail.com"}})
                }}
            </div>
            <div class="col-md-6">
                {{ form_row(registrationForm.plainPassword,
                    {'attr':{'placeholder':"votre mot de pass"}},
                    {label: 'Password'})
                }}
            </div>
        </div>
                {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn btn-lg btn-primary btn-block" formnovalidate>
                Register
            </button>
            {{ form_end(registrationForm) }}
        </div>
</div>
{% endblock %}
